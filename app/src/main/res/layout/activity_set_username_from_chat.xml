<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#975FAF"
    tools:context=".SetUsernameFromChatActivity">


    <TextView
        android:id="@+id/set_username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Enter new username"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/set_username_new_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Give a new username"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/set_username_textView"
        app:layout_constraintTop_toBottomOf="@+id/set_username_textView" />

    <Button
        android:id="@+id/button_set_username_from_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Set username"
        app:layout_constraintStart_toStartOf="@+id/set_username_new_username"
        app:layout_constraintTop_toBottomOf="@+id/set_username_new_username" />


</androidx.constraintlayout.widget.ConstraintLayout>